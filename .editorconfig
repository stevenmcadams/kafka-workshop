root = true

[*]

indent_style = space
indent_size = 4
max_line_length = 160
tab_width = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{*.yml, *.yaml}]
indent_size = 2
